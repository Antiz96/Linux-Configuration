#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

##Prompt (RED when not running TMUX/White when running TMUX)##

TMUX_STATUS=$(env | grep tmux)

if [ -z "$TMUX_STATUS" ]; then
        PS1="\[\e[0;31m[\u@\h \W]\$ \e[m\]"
else
        PS1="[\u@\h \W]\$ "
fi

##Tmux Autostart##

[ -x "$(command -v tmux)" ] \
  && [ -z "${TMUX}" ] \
  && (tmux attach || tmux) >/dev/null 2>&1

##ENV##

#Export Color
export Color="--color=auto"

#Export Editor
export EDITOR=/usr/bin/vim

##Aliases##

#Listing Files
alias ls='ls $Color'
alias ll="ls -ltr"
alias l="ls -ltrA"

#Grep
alias grep='grep $Color'
alias egrep='egrep $Color'
alias fgrep='fgrep $Color'

#Manipulating Files
alias mv="mv -i"
alias cp="cp -i"
alias ln="ln -i"
alias rm="rm -i"

#Edit
alias vi="vim"

#Package Manager
alias update="sudo dnf check-update"
alias upgrade="sudo dnf upgrade --refresh"
alias fullupgrade="sudo dnf distro-sync --refresh"
alias install="sudo dnf install"
alias remove="sudo dnf remove"
alias search="sudo dnf search"
alias package="sudo dnf list installed"
alias cleancache="sudo dnf clean all"
alias cleanorphans="sudo dnf autoremove"

#Tmux
alias tkill="tmux kill-session -t"
alias tswitch="tmux a -t"

#Docker
alias dockup="sudo docker pull containrrr/watchtower && sudo docker run --rm -v /var/run/docker.sock:/var/run/docker.sock containrrr/watchtower --cleanup --run-once"

#Sudoers
alias sudo="sudo "
